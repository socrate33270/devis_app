<h1>Nouveau client</h1>

<%= form_with(model: @client) do |form| %>
  <% if @client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@client.errors.count, "error") %> ont empêché ce client d'être sauvegardé:</h2>
      <ul>
        <% @client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name, "Prénom", class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, "Nom", class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :company_name, "Entreprise", class: "form-label" %>
    <%= form.text_field :company_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, "Email", class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, "Téléphone", class: "form-label" %>
    <%= form.telephone_field :phone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, "Statut", class: "form-label" %>
    <%= form.select :status, 
                   options_for_select([
                     ["Prospect", "prospect"],
                     ["Client", "client"],
                     ["Inactif", "inactive"]
                   ], "prospect"),
                   {}, { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :notes, "Notes", class: "form-label" %>
    <%= form.text_area :notes, rows: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Créer le client", class: "btn btn-primary" %>
  </div>
<% end %>

<div>
  <%= link_to "Retour", clients_path, class: "btn btn-secondary" %>
</div>